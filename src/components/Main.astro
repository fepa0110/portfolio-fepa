---
import { Image } from "astro:assets";
// import fotoPerfil from "../assets/FotoPerfil.jpg";
import fotoPerfil from "../assets/FotoPerfilSinFondo.webp";
import { Timeline, type Fecha } from "../components/Timeline";
import ProgressBar from "./ProgressBar.astro";
import Card from "./Card.astro";
import Header from "./Header.astro";
import TechCard from "./TechCard.astro";
import JavaIcon from "./icons/JavaIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import ExperienciaLaboral from "./ExperienciaLaboral.astro";
import Tecnologias from "./Tecnologias.astro";
import HistorialAcademico from "./HistorialAcademico.astro";
import Proyectos from "./Proyectos.astro";
import ButtonToTop from "./ButtonToTop.astro";
import Divider from "./Divider.astro";
import CarouselReact from "./carousel/CarouselReact";
---
<section class="w-3/4 flex flex-col h-full place-self-center z-0">
	<section
		class="flex sm:flex-row flex-col justify-center md:justify-start items-center mt-10 px-16 pb-8 border-primary"
		id="biografia">
		<Image
			class="object-contain drop-shadow z-0"
			src={fotoPerfil}
			alt="Foto de perfil"
			height="125"
			width="125"
		/>
		<div class="flex flex-col pl-16">
			<h1 class="font-bold text-3xl text-primary">Fabricio Pafumi</h1>
			<p class="text-slate-400">Full Stack Developer</p>
			<p class="text-slate-400">Analista Programador Universitario</p>
			<p class="text-base"></p>

			<div class="flex flex-row items-center gap-4 pt-3">
				<a
					class="hover:scale-105"
					href="https://github.com/fepa0110"
					target="_blank">
					<GithubIcon height="28" width="28" />
				</a>

				<a
					class="hover:scale-105"
					href="https://www.linkedin.com/in/fabricio-pafumi-viola/"
					target="_blank">
					<LinkedInIcon height="28" width="28" />
				</a>
			</div>
		</div>
	</section>

	<Divider />

	<ExperienciaLaboral />

	<Tecnologias />

	<HistorialAcademico />

	<Proyectos />
</section>
