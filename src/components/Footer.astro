---
import DocumentIcon from "./icons/DocumentIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
---

<footer
	class="flex flex-row justify-evenly w-full border-t-2 border-primary/50 h-16 py-3 gap-8 items-center">
	<p class="text-outline">Fabricio Pafumi</p>
	<div class="flex flex-row gap-4 items-center justify-center">
		<a
			class="hover:scale-110 duration-300 transition-all"
			href="https://github.com/fepa0110"
			target="_blank">
			<GithubIcon height="24" width="24" />
		</a>

		<a
			class="hover:scale-110 duration-300 transition-all"
			href="https://www.linkedin.com/in/fabricio-pafumi-viola/"
			target="_blank">
			<LinkedInIcon height="24" width="24" />
		</a>
		<a
			href="/CV.pdf"
			target="_blank"
			class="flex flex-row items-center gap-1 rounded-lg border-2 py-1 px-3 border-slate-400 hover:scale-105 transition-all">
			<DocumentIcon height="12" width="12" />
			<span class="text-xs">CV</span>
		</a>
	</div>
</footer>
